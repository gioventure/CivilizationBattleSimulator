#ifndef UNIT_H
#define UNIT_H

#include <string>
using namespace std;

class Unit
{
 private:
  int attack;
  int defense;
  int hitpoints;
  int firepower;
  string name;
  bool isFortified;
  enum VeteranStatus {NONE, VETERAN, HARDENED, ELITE};

 public:
  Unit(int attack, int defense, int hitpoints,
       int firepower, string name, bool isFortified);
  void adjustAttack(double percentage);
  void adjustDefense(double percentage);
  int getHitpoints();
  
  
};

#endif
